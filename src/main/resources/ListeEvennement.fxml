<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Evennement.Controller.ListeEvennement">

    <children>
        <!-- Include the Sidebar -->
        <fx:include source="SideBar.fxml" />

        <!-- Main Content for Listing Evennements -->
        <AnchorPane layoutX="260.0" prefHeight="794.0" prefWidth="1329.0" style="-fx-background-color: white;">
            <children>
                <Label layoutX="44.0" layoutY="30.0" text="Liste des Événements">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <TableView fx:id="tableView" layoutX="1.0" layoutY="84.0" prefHeight="647.0" prefWidth="1294.3">
                    <columns>
                        <TableColumn fx:id="colNom" prefWidth="168.8" text="Nom" />
                        <TableColumn fx:id="colLocal" prefWidth="228.8" text="Local" />
                        <TableColumn fx:id="colDate" prefWidth="240.8" text="Date" />
                        <TableColumn fx:id="colDes" prefWidth="335.9" text="Description" />
                        <TableColumn fx:id="NomOr" prefWidth="200" text="Nom Organisateur" />
                        <!-- Add a new column for the delete button -->
                        <TableColumn fx:id="colAction" prefWidth="120.0" text="Action">
                            <!-- No cellValueFactory or cellFactory defined here -->
                        </TableColumn>

                    </columns>
                </TableView>

                <!-- Buttons -->
                <Button fx:id="btnLoad" layoutX="1117.0" layoutY="29.0" mnemonicParsing="false" onAction="#loadEvennements" text="Charger les événements">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
                <Button fx:id="btnUpdate" layoutX="985.0" layoutY="31.0" mnemonicParsing="false" onAction="#InterfaceUpdate" text="Modifier">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Button>
            <Button fx:id="Ajout" layoutX="854.0" layoutY="32.0" mnemonicParsing="false" onAction="#interfaceAjout" text="Ajouter">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
