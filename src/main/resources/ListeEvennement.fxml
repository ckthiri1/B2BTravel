<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Evennement.Controller.ListeEvennement">

    <children>
        <!-- Include the Sidebar -->
        <fx:include source="SideBar.fxml" />

        <!-- Main Content for Listing Evennements -->
        <AnchorPane layoutX="260.0" prefHeight="794.0" prefWidth="1226.0" style="-fx-background-color: white;">
            <children>
                <Label layoutX="44.0" layoutY="30.0" text="Liste des Événements">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <TableView fx:id="tableView" layoutX="30.0" layoutY="80.0" prefHeight="647.0" prefWidth="975.0">
                    <columns>
                        <TableColumn fx:id="colNom" prefWidth="168.8" text="Nom" />
                        <TableColumn fx:id="colLocal" prefWidth="228.8" text="Local" />
                        <TableColumn fx:id="colDate" prefWidth="240.8" text="Date" />
                        <TableColumn fx:id="colDes" prefWidth="335.9" text="Description" />

                    </columns>
                </TableView>

                <!-- Buttons -->
                <Button fx:id="btnLoad" layoutX="995.0" layoutY="20.0" mnemonicParsing="false" onAction="#loadEvennements" text="Charger les événements">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
                <Button fx:id="btnUpdate" layoutX="1076.0" layoutY="122.0" mnemonicParsing="false" onAction="#updateEvennement" text="Modifier">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Button>
                <Button fx:id="btnDelete" layoutX="1072.0" layoutY="186.0" mnemonicParsing="false" onAction="#deleteEvennement" text="Supprimer">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
