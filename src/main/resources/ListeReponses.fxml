<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Reclamation.Controller.ListeReponseController">
    <children>
        <!-- Titre de la page -->
        <Text layoutX="249.0" layoutY="125.0" text="Réclamation et Réponse">
            <font>
                <Font size="24" />
            </font>
        </Text>

        <!-- TableView pour afficher la liste des réponses -->
        <TableView fx:id="reponsesTable" layoutX="14.0" layoutY="187.0" prefHeight="200.0" prefWidth="700.0">
            <columns>
                <!-- Colonne pour l'ID de la réponse -->
                <TableColumn fx:id="colRec" prefWidth="350" text="Titre Reclamation">
                    <cellValueFactory>
                        <PropertyValueFactory property="IDRep" />
                    </cellValueFactory>
                </TableColumn>

                <!-- Colonne pour la date de la réponse -->
                <TableColumn fx:id="colRep" prefWidth="350" text="Reponse">
                    <cellValueFactory>
                        <PropertyValueFactory property="DateRep" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>

        <!-- Bouton pour retourner à la liste des réclamations -->
        <Button layoutX="59.0" layoutY="447.0" onAction="#retour" text="Ajouter Reponse" />
    </children>
</AnchorPane>
