<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Evennement.Controller.ListeOrganisateur">

    <children>
        <!-- Include the Sidebar -->
        <fx:include source="SideBar.fxml" />


        <AnchorPane layoutX="260.0" prefHeight="794.0" prefWidth="1226.0" style="-fx-background-color: white;">
            <children>
                <Label layoutX="44.0" layoutY="30.0" text="Liste des Organisateurs">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <TableView fx:id="tableViewOrganisateur" layoutX="120.0" layoutY="106.0" prefHeight="600.0" prefWidth="900">
                    <columns>
                        <TableColumn fx:id="colNomOrganisateur" prefWidth="300" text="Nom" />
                        <TableColumn fx:id="colContact" prefWidth="300" text="Local" />
                        <TableColumn fx:id="colActionOrganisateur" prefWidth="300" text="Action">
                            <!-- No cellValueFactory or cellFactory defined here -->
                        </TableColumn>
                    </columns>
                </TableView>

                <!-- Buttons -->
                <Button fx:id="btnLoad" layoutX="995.0" layoutY="20.0" mnemonicParsing="false" onAction="#loadOrganisateurs" text="Charger les Organisateurs">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
            <Button fx:id="updateOr" layoutX="1090.0" layoutY="360.0" mnemonicParsing="false" onAction="#InterfaceUpdate" text="Modifier">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="ajouterOr" layoutX="1090.0" layoutY="310.0" mnemonicParsing="false" onAction="#interfaceAjoutO" text="Ajouter">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>




            </children>
        </AnchorPane>
    </children>
</AnchorPane>
