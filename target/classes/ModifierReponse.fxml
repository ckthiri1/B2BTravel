<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Reclamation.Controller.ModifierReponseController">
    <children>
        <!-- TextArea pour la description de la réponse -->
        <TextArea fx:id="txtDescription" layoutX="50.0" layoutY="20.0" prefHeight="100.0" prefWidth="300.0" promptText="Entrez la description de la réponse" />

        <!-- Bouton pour valider la modification -->
        <Button fx:id="btnModifier" layoutX="150.0" layoutY="140.0" text="Modifier" onAction="#modifierReponse" />
    </children>
</AnchorPane>