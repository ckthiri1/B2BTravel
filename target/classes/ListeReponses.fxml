<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Reclamation.Controller.ListeReponseController">
    <children>
        <!-- Titre de la page -->
        <Text layoutX="249.0" layoutY="125.0" text="Réclamation et Réponse">
            <font>
                <Font size="24" />
            </font>
        </Text>

        <!-- TableView pour afficher la liste des réponses -->
        <TableView fx:id="reponsesTable" layoutX="14.0" layoutY="187.0" prefHeight="200.0" prefWidth="700.0">
            <columns>
                <!-- Colonne pour le titre de la réclamation -->
                <TableColumn fx:id="colRec" prefWidth="250" text="Réponse">
                    <cellValueFactory>
                        <PropertyValueFactory property="reclamationTitre" />
                    </cellValueFactory>
                </TableColumn>

                <!-- Colonne pour la description de la réponse -->
                <TableColumn fx:id="colRep" prefWidth="250" text="Titre réclamation">
                    <cellValueFactory>
                        <PropertyValueFactory property="descriptionRep" />
                    </cellValueFactory>
                </TableColumn>

                <!-- Colonne pour le bouton "Modifier" -->
                <TableColumn fx:id="colModifier" prefWidth="100" text="Modifier" />

                <!-- Colonne pour le bouton "Supprimer" -->
                <TableColumn fx:id="colSupprimer" prefWidth="100" text="Supprimer" />
            </columns>
        </TableView>

        <!-- Bouton pour retourner à la vue AjouterReponse -->
        <Button layoutX="59.0" layoutY="447.0" onAction="#retour" text="Ajouter Reponse" />
    </children>
</AnchorPane>
