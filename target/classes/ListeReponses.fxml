<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="azizcss.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Reclamation.Controller.ListeReponseController">
    <children>
        <!-- Titre de la page -->
        <Text layoutX="249.0" layoutY="125.0" text="Réclamation et Réponse">
            <font>
                <Font size="24" />
            </font>
        </Text>

        <!-- Champ de recherche -->
        <TextField fx:id="txtSearch" layoutX="14.0" layoutY="140.0" onKeyReleased="#rechercherReponses" promptText="Rechercher par titre ou description" />
        <Button layoutX="250.0" layoutY="140.0" onAction="#rechercherReponses" text="Rechercher" />

        <!-- Bouton pour exporter en PDF -->
        <Button layoutX="400.0" layoutY="140.0" onAction="#exporterEnPDF" text="Exporter en PDF" />

        <!-- ScrollPane pour contenir la liste des réponses -->
        <ScrollPane layoutX="14.0" layoutY="187.0" prefHeight="400.0" prefWidth="700.0">
            <content>
                <VBox fx:id="reponsesVBox" spacing="10" style="-fx-padding: 10px;" />
            </content>
        </ScrollPane>

        <!-- Bouton pour ajouter une réponse -->
        <Button layoutX="28.0" layoutY="14.0" onAction="#retour" text="Ajouter Reponse" />
    </children>
</AnchorPane>
